<div class="container">
  <div class="row">
    <div class="col-4">
      <%= profile_picture @account, 200, 200 %>
    </div>
    <div class="col-8 text-left">
      <div class="row">
        <div class="col-8">
          <%= link_to "Edit Profile", edit_account_registration_path, class:"btn btn-muted btn-custom float-end" if can_edit_profile?(@account.id) %>
          <h1><%= @account.full_name %></h1>
        </div>
      </div>
      
      <div class="row profile-stats">
        <div class="col-4">
          <%= @account.posts.count  %> posts
        </div>
        <div class="col-4">
          <%= @account.total_followers %> followers
        </div>
        <div class="col-4">
          <%= @account.total_following %> following
        </div>
      </div>
      
      <p><%= @account.full_name%></p>
      <p><%= simple_format @account.description%></p>
      <p><%= link_to @account.website if @account.website.present? %></p>
    </div>
  </div>
  <div class = "profile-posts row " style="margin-top: 40px;">
    <% @posts.each do |post| %>
    <div class="col-4">
      <div class="insta-post post-square" style="background: url(<%= post.image.url %>) no-repeat center top">
        <%= link_to post_path(post) do %>
          <div class="post-stats">
            <div class="inner">
              <i class="fa fa-heart"></i> <%= post.total_likes_count %>
              <i class="fa fa-comment m-l-15"></i> <%= post.total_comments_count %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>